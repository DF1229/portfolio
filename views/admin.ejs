<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Daan Faber's portfolio website">
    <meta name="author" content="Daan Faber">
    <meta name="generator" content="Hugo 0.88.1">
    <title>Daan Faber</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="css/custom.css" rel="stylesheet">
</head>

<body>
    <header>
        <div class="collapse bg-dark" id="navbarHeader">
        </div>
        <div class="navbar navbar-dark bg-dark shadow-sm">
            <div class="container">
                <a href="/" class="navbar-brand d-flex align-items-center">
                    <strong>Daan Faber</strong>
                </a>
            </div>
        </div>
    </header>

    <main>
        <section class="py-5 text-center container">
            <div class="row py-lg-1">
                <h1 class="fw-light">Admin dashboard</h1>
            </div>
        </section>
        <div class="py-5 bg-light">
            <div class="container">
                <div class="justify-content-center row g-3">
                    <div class="col-sm-12">
                        <ul class="nav nav-tabs">
                            <li class="nav-item">
                                <button class="nav-link active" id="usersMenu-tab" data-bs-toggle="tab" data-bs-target="#usersMenu" type="button" >Users</button>
                            </li>
                            <li class="nav-item">
                                <button class="nav-link" id="projects-tab" data-bs-toggle="tab" data-bs-target="#projects" type="button">Projects</button>
                            </li>
                        </ul>
                        <div class="tab-content row">

                            <div class="tab-pane fade show active" id="usersMenu" role="tabpanel">
                                <br>
                                <ul class="nav nav-pills nav-fill">
                                    <li class="nav-item">
                                        <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#usersList" type="button" >View all users</button>
                                    </li>
                                    <li class="nav-item" >
                                        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#usersRegister" type="button">Register new user</button>
                                    </li>
                                    <li class="nav-item" >
                                        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#usersUpdate" type="button">Update user</button>
                                    </li>
                                    <li class="nav-item" >
                                        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#usersDelete" type="button">Delete user</button>
                                    </li>
                                </ul>
                                <br>
                                <div class="tab-content row">
                                    <div class="tab-pane fade show active" id="usersList">
                                        <table class="table table-striped">
                                            <thead>
                                                <tr>
                                                    <th scope="col">#</th>
                                                    <th scope="col">Username</th>
                                                    <th scope="col">E-mail</th>
                                                    <th scope="col">Admin</th>
                                                    <th scope="col">_id</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% locals.users.forEach((dbUser, index) => { %>
                                                <tr>
                                                    <th scope="row"><%= index %></th>
                                                    <th><%= dbUser.username %></th>
                                                    <th><%= dbUser.email %></th>
                                                    <th><%= dbUser.admin %></th>
                                                    <th><%= dbUser._id %></th>
                                                </tr>
                                                <% }); %>
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="tab-pane fade" id="usersRegister">
                                        <div class="col-sm-6">
                                            <form action="/api/user/register" method="post">
                                                <div class="form-floating">
                                                    <input type="text" name="username" class="form-control" placeholder="" required>
                                                    <label for="username" class="form-label">Username</label>
                                                </div>
                                                <div class="form-floating">
                                                    <input type="email" name="email" class="form-control" placeholder="" required>
                                                    <label for="email" class="form-label">E-mailadress</label>
                                                </div>
                                                <div class="form-floating">
                                                    <input type="password" name="password" class="form-control" placeholder="" required>
                                                    <label for="password" class="form-label">Password</label>
                                                </div>
                                                <button type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                                            </form>
                                        </div>
                                    </div>
                                    <div class="tab-pane fade" id="usersUpdate"></div>
                                    <div class="tab-pane fade" id="usersDelete"></div>
                                </div>


                            </div>
        
                            <div class="tab-pane fade" id="projects" role="tabpanel">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Title</th>
                                            <th scope="col">Author</th>
                                            <th scope="col">Hidden</th>
                                            <th scope="col">Date</th>
                                            <th scope="col">_id</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% locals.projects.forEach((project, index) => { %>
                                        <tr>
                                            <th scope="row"><%= index %></th>
                                            <th><%= project.title %></th>
                                            <th><%= project.author %></th>
                                            <th><%= project.hidden %></th>
                                            <th><%= project.date.toUTCString() %></th>
                                            <th><%= project._id %></th>
                                        </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>
</html>